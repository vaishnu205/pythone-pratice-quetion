#instance variable vs class varible
#objec ke liye alag alag value and inside the init ,sab object ke liye same value but outside the init
class Student:
    collage="sppu" #class variable
    def __init__(self,name):
        self.name=name #instance variable
s1=Student("A")
s2=Student("B")
print(s1.name,s1.collage)
print(s2.name,s2.collage)
