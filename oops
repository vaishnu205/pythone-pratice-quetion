class Student:
    def __init__ (self,name,marks):
        self.name=name
        self.marks=marks
    @staticmethod
    def hello():
        print("hello")
    def get_avg(self):
        sum=0
        for val in self.marks:
            sum+=val
        print("hi",self.name,"your name is:")
        s1=Student("tony stark",[99,98,97])
        s1.get_avg()
        s1.hello()
        
